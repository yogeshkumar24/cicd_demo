default_platform(:android)

platform :android do
  desc "Build the Android App"
  lane :android_release do
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )
  end

  desc "Submit a new version to the internal track in the Google Play"
  lane :deploy_internal do
    gradle(task: "clean")
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )

    # Use the correct path for the service account JSON
      json_path = "android/service_account.json"

    # Upload to the internal track
    upload_to_play_store(
      track: 'internal',
      json_key: json_path
    )

     sh "rm #{json_path}"
  end
end
