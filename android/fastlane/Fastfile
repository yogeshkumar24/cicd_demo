default_platform(:android)

platform :android do
  desc "Build the Android App"
  lane :android_release do
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )
  end

  desc "Submit a new version to the internal track in the Google Play"
  lane :deploy_internal do
    gradle(task: "clean")
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )

    if ENV["GOOGLE_PLAY_SERVICE_ACCOUNT_JSON"].to_s.strip.empty?
      UI.user_error!("Hey hey GOOGLE_PLAY_SERVICE_ACCOUNT_JSON is not set or is empty!")
    else
      decoded_json = Base64.decode64(ENV["GOOGLE_PLAY_SERVICE_ACCOUNT_JSON"])
      File.open("service-account.json", "w") { |file| file.write(decoded_json) }
    end
    # Upload to the internal track
    upload_to_play_store(
      track: 'internal',
      json_key: "service-account.json"
    )

    # Optional: Clean up the service account JSON after use
    sh "rm service-account.json"
  end
end
