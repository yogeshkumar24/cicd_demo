platform :android do
  desc "Build the Android App"
  lane :android_release do
    # Decode the base64-encoded service account JSON and save to a file
    if ENV["GOOGLE_PLAY_SERVICE_ACCOUNT_JSON"].to_s.strip.empty?
      UI.user_error!("GOOGLE_PLAY_SERVICE_ACCOUNT_JSON is not set or is empty!")
    else
      decoded_json = Base64.decode64(ENV["GOOGLE_PLAY_SERVICE_ACCOUNT_JSON"])
      File.open("service-account.json", "w") { |file| file.write(decoded_json) }
    end

    gradle(
      task: 'bundle',
      build_type: 'Release'
    )
  end

  desc "Deploy to Google Play"
  lane :deploy_internal do
    gradle(task: "clean")
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )
    upload_to_play_store(
      track: 'internal',
      json_key: "service-account.json"
    )
  end
end
